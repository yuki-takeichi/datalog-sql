name:                datalog-sql
version:             0.1.0.0
-- synopsis:            
-- description:         
license:             MIT
license-file:        LICENSE
author:              Yuki Takeichi
maintainer:          yuki.takeichi at gmail.com
-- copyright:           
category:            Data
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Data.Datalog
                     , Data.Datalog.AST
                     , Data.Datalog.Parser
                     , Language.Datalog.Translator.SQL 
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8
                     , containers >= 0.5.5
                     , text >= 1.1
                     , parsec >= 3.1
                     , semigroups >= 0.16 && <0.17
                     , mtl >= 2.2.1
  hs-source-dirs:      src
  default-language:    Haskell2010

executable repl
  main-is: repl.hs
  build-depends:       base >=4.7 && <4.8
                     , containers >= 0.5.5
                     , parsec >= 3.1
                     , HDBC >= 2.4.0
                     , HDBC-postgresql >= 2.3.2
                     , datalog-sql
  default-language:    Haskell2010

executable datalog2sql
  main-is: datalog2sql.hs
  build-depends:       base >=4.7 && <4.8
                     , parsec >= 3.1
                     , containers >= 0.5.5
                     , datalog-sql
  default-language:    Haskell2010

test-suite unittest
  hs-source-dirs:      test
  type:                exitcode-stdio-1.0
  main-is:             Test.hs
  build-depends:       base >=4.7 && <4.8
                     , containers >= 0.5.5
                     , datalog-sql
                     , Cabal >= 1.9.2
                     , parsec >= 3.1
                     , mtl >= 2.2.1
                     , QuickCheck
                     , HUnit
                     , test-framework
                     , test-framework-hunit
                     , test-framework-quickcheck2
                     , template-haskell
  default-language:    Haskell2010
